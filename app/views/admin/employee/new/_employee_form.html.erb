<%= form_with(model: @employee, url: new_admin_employee_path, local: true) do |f| %>

<div class="form-row">
  <div class="form-group col-md-6">
    <%= f.label :first_name %><br/>
    <%= f.text_field :first_name, class: "form-control", placeholder: "John"%>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :last_name %><br/>
    <%= f.text_field :last_name, class: "form-control", placeholder: "Doe"%>
  </div>
</div>

<div class="form-row">
  <div class="form-group col-md-6">
    <%= f.label :email %><br/>
    <%= f.email_field :email, class: "form-control", placeholder: "123@example.com"%>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :password %><br/>
    <%= f.password_field :password, class: "form-control", placeholder: "Password"%>
  </div>
</div>

<div class="form-row">
  <div class="form-group col-md-6">
    <%= f.label :phone_number %><br/>
    <%= f.text_field :phone_number, class: "form-control", placeholder: "1234567890"%>
  </div>
  <div class="form-group col-md-6">
   <%= f.label :gender %><br/>
    <%= f.collection_select :gender_id, Gender.order(:id),:id,:title, {include_blank: "Choose one"}, {class: "form-control"} %>
  </div>
</div>

<%= f.fields_for :address do |address_form| %>
<div class="form-row">
  <div class="form-group col-md-12">
    <%= address_form.label "Address" %><br/>
    <%= address_form.text_field :line_one, class: "form-control", placeholder: "1234 Main St"%>
  </div>
</div>

<div class="form-row">
  <div class="form-group col-md-12">
    <%= address_form.label "Address (line 2)" %><br/>
    <%= address_form.text_field :line_two, class: "form-control", placeholder: "Apartment or street"%>
  </div>
</div>

<div class="form-row">
  <div class="form-group col-md-6">
    <%= address_form.label :city %><br/>
    <%= address_form.text_field :city, class: "form-control", placeholder: "Trivandrum"%>
  </div>
  <div class="form-group col-md-6">
    <%= address_form.label :pin %><br/>
    <%= address_form.text_field :pin, class: "form-control", placeholder: "10012"%>
  </div>
</div>

<div class="form-row">
  <div class="form-group col-md-6">
    <%= address_form.label :country %><br/>
    <%= address_form.text_field :country, class: "form-control", placeholder: "India"%>
  </div>
</div>
<% end %>

<div class="form-row">
  <div class="main-content-footer col-md-12">
    <%= button_tag "Reset", type: :reset , class: "btn btn-danger" %>
    <%= f.submit "Save", class: "btn btn-success" %>
  </div>
</div>

<% end %>
