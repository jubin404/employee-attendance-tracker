$(document).on('turbolinks:load', function() {
  $('#employee-name-input').on('input', function() {
    var inputVal = $(this).val();
    $.ajax({
      url: '<%= admin_attendance_index_path %>',
      type: 'GET',
      data: { employee_name: inputVal },
      success: function(data) {
        $('#employee-list').html(data);
      }
    });
  });
});
